# Préparation des tortues
import turtle
r = 100
pas = 2
edython.turtleSetup()
def tortue(x,y,couleur):
    T = turtle.Turtle()
    T.penup()
    T.setposition(x,y)
    T.pendown()
    T.color(couleur)
    return T
T1 = tortue(- r,- r,'red')
T2 = tortue(+ r,- r,'blue')
T3 = tortue(+ r,+ r,'orange')
T4 = tortue(- r,+ r,'green')
def orienter(de,vers):
    de.setheading(de.towards(vers.position()))
def orienter_tout():
    orienter(T1,T2)
    orienter(T2,T3)
    orienter(T3,T4)
    orienter(T4,T1)
def avancer():
    T1.forward(pas)
    T2.forward(pas)
    T3.forward(pas)
    T4.forward(pas)
while pas &lt; T1.distance(T2.position()):
    orienter_tout()
    avancer()
turtle.done()
